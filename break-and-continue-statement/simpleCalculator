#include<iostream>
using namespace std;
int main(){
    //implement a simple calculator using switch case
    int n1,n2;
    cout<<"input 2 numbers:\t";
    cin>>n1>>n2;
    char op;
    cout<<"input an operator:\t";
    cin>>op;
    switch(op){
        case '+':
                cout<<n1+n2<<endl;
                break;
        case '-':
                cout<<n1-n2<<endl;
                break;
        case '*':
                cout<<n1*n2<<endl;
                break;
        case '/':
                cout<<n1/n2<<endl;
                break;
        default:
                cout<<"enter another operator"<<endl;
                break;
    }
    return 0;
}
